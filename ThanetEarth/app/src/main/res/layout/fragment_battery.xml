<?xml version="1.0" encoding="utf-8"?><!-- layout for monitoring fragment-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        android:paddingTop="10dp">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_grey"
                android:minHeight="120dp"

                >

                <TextView
                    android:id="@+id/section_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="Current Battery Levels(%)"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:padding="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/section_title">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Greenhouse 1 Sensors"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textColor="@android:color/white"/>

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/battery_chart_1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="40dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/chart_unavailable1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/waiting_data"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:textSize="14dp"
                        android:padding="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="40dp"
                        android:textColor="@color/grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Greenhouse 2 Sensors"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textColor="@android:color/white" />

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/battery_chart_2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="40dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/chart_unavailable2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/waiting_data"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:textSize="14dp"
                        android:padding="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="40dp"
                        android:textColor="@color/grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Greenhouse 3 Sensors"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textColor="@android:color/white"/>

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/battery_chart_3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="40dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/chart_unavailable3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/waiting_data"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:textSize="14dp"
                        android:padding="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="40dp"
                        android:textColor="@color/grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Outdoor Monitoring Station"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textColor="@android:color/white"/>

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/battery_chart_4"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="40dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/chart_unavailable4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/waiting_data"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:textSize="14dp"
                        android:padding="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="40dp"
                        android:textColor="@color/grey" />


                </LinearLayout>


            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>
</ScrollView>