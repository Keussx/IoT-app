<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_grey"
        android:minHeight="120dp"
        >

        <TextView
            android:id="@+id/section_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/first_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/section_title"
        >



        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/average_light"
            custom:arc_finished_color="@color/bright_green"
            custom:arc_unfinished_color="@color/green_light"
            android:layout_marginLeft="50dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            custom:arc_progress="0"
            custom:arc_text_size="25dp"
            custom:arc_text_color="@android:color/white"
            custom:arc_bottom_text="AVERAGE"
            custom:arc_suffix_text=""/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:weightSum="1"
            app:layout_constraintBottom_toBottomOf="@+id/average_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/average_light"
            app:layout_constraintTop_toTopOf="@+id/average_light">


            <TextView
                android:id="@+id/sensor1_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/sensor"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:paddingRight="20dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/sensor2_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/sensor"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:paddingRight="20dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/sensor3_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/sensor"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:paddingRight="20dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/sensor4_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/sensor"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:paddingRight="20dp"
                android:textColor="@android:color/white" />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="35dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_row" />

        <TextView
            android:id="@+id/chart_unavailable4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/waiting_data"
            android:textAlignment="center"
            android:visibility="visible"
            android:freezesText="true"
            android:textSize="14dp"
            android:padding="20dp"
            android:textColor="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_row"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>